<form method="POST" action="/teams" class="form">

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <label>Team Name (or last name)
    <input type="text" name="team[name]">
  </label>

  <% (1..10).each do |i|%>

  <label>Player <%=i%>
    <select name="team[players][<%=i%>]" type="select">
      <option selected disabled>Select a player!</option>
      <% @players.each do |player|%>
        <option value="<%=player.id%>"><%=player.name.split(" ").reverse.join(", ")%></option>
      <%end%>
    </select>
  </label>

  <%end%>

  <input type="submit" value="Submit Team!">

</form>